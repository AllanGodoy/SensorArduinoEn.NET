@model IT_Help_Desk.Web.Models.ApplicationGroup

@{
    ViewBag.Title = "Details";
}

<div class="page-container animated  fadeIn">
    <div class="page-content">

        <div class="page-title">
            <h2><span class="fa fa-asterisk"></span>Details</h2>
        </div>

        <div class="page-content-wrap">

            <div class="row">
                <div class="col-md-12">
                    <!-- START DEFAULT DATATABLE -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Details</h3>
                            <ul class="panel-controls">
                                <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span></a></li>
                                <li><a href="#" class="panel-refresh"><span class="fa fa-refresh"></span></a></li>
                                <li><a href="#" class="panel-remove"><span class="fa fa-times"></span></a></li>
                            </ul>
                        </div>
                        <div class="panel-body">



                            <div>
                                <h4>ApplicationGroup</h4>
                                <hr />
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Name)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Description)
                                    </dd>
                                </dl>
                            </div>
                            <h4>List of permissions granted this group</h4>
                            @if (ViewBag.PermissionsCount == 0)
                            {
                                <hr />
                                <p>No users found in this role.</p>
                            }
                            <table class="table">
                                @foreach (var item in ViewBag.RolesList)
                                {
                                    <tr>
                                        <td>
                                            @item
                                        </td>
                                    </tr>
                                }
                            </table>
                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                                @Html.ActionLink("Back to List", "Index")
                            </p>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



